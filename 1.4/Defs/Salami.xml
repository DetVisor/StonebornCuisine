<?xml version="1.0" encoding="utf-8" ?>

<Defs>

<ThingDef ParentName="OrganicProductBase">
    <defName>Sc_Salami</defName>
    <label>salami</label>
    <description>A cured, salted sausage usually prepared with some spices. It lasts a long time outside of storage and requires little refrigeration.</description>
    <thingClass>ThingWithComps</thingClass>
    <thingCategories>
      <li>Foods</li>
      <li>MeatRaw</li>
    </thingCategories>
    <graphicData>
      <texPath>Things/Foods/Salami</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <socialPropernessMatters>true</socialPropernessMatters>
    <statBases>
      <MarketValue>2</MarketValue>
      <Mass>0.20</Mass>
      <Flammability>0.3</Flammability>
      <WorkToMake>900</WorkToMake>
      <DeteriorationRate>1.6</DeteriorationRate>
      <Nutrition>0.20</Nutrition>
    </statBases>
    <ingestible>
      <foodType>Meal</foodType>
      <preferability>MealSimple</preferability>
      <ingestEffect>EatMeat</ingestEffect>
      <ingestSound>Meal_Eat</ingestSound>
      <optimalityOffsetHumanlikes>9</optimalityOffsetHumanlikes>
    </ingestible>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>120</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
      <li Class="CompProperties_Ingredients">
        <noIngredientsFoodKind>Meat</noIngredientsFoodKind>
      </li>
      <li Class="CompProperties_FoodPoisonable" />
    </comps>
    <allowedArchonexusCount>200</allowedArchonexusCount>
  </ThingDef>
